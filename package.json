{
  "name": "real-debrid-manager",
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:all": "npm run build && npm run build:firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "lint": "eslint src --ext .ts,.js,.svelte",
    "lint:fix": "eslint src --ext .ts,.js,.svelte --fix",
    "format": "prettier --write src/**/*.{ts,js,svelte}",
    "format:check": "prettier --check src/**/*.{ts,js,svelte}",
    "typecheck": "svelte-check",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "bump:major": "npm version major"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.287",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@wxt-dev/module-svelte": "^2.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.38.10",
    "svelte-check": "^4.1.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "wxt": "^0.19.22"
  }
}
